<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".EnvironmentalActivity">

        <!-- this is the start of one row of gauges -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- this is the start of one gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabin Temp"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Alternator1Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>
            <!-- this is the end of that gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alternator 2"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Alternator2Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>
            <!-- this is the end of that gauge -->

        </LinearLayout>
        <!-- this is the end of one row of gauges -->

        <!--beginning of the second row -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- this is the start of one gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery 1"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Battery1Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>
            <!-- this is the end of that gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery 2"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Battery2Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>
            <!-- this is the end of that gauge -->

        </LinearLayout> <!-- this is the end of the 2nd row -->

    </LinearLayout>
</ScrollView>