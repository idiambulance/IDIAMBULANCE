<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".BatteriesActivity">

        <!-- FIrst Row of gauges -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Alternator 1 Gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alternator 1"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Alternator1Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>

            <!-- Alternator 2 Gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alternator 2"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Alternator2Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>
        </LinearLayout>

        <!--Second Row of Gauges-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Battery 1 gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery 1"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Battery1Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>

            <!-- Battery 2 Gauge -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery 2"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:layout_marginTop="-35dp"
                    android:id="@+id/Battery2Gauge"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>

        </LinearLayout>
        <!-- this is the end of the 2nd row -->

    </LinearLayout>
</ScrollView>